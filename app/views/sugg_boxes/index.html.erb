<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Sugg boxes</h1>
    <%= link_to 'New sugg box', new_sugg_box_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="sugg_boxes" class="min-w-full">
    <%= render @sugg_boxes %>
  </div>

  <p>
    <% @sugg_boxes.each do |s| %>
      <%= s.name %>
    <% end %>
  </p>
</div>
