<div class="">
  <h1> New Review </h1>
  <br>

  <%= form_with model: @review do |form| %>
    <div>
      <%= form.label :title  %><br>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :author %><br>
      <%= form.text_field :author %>
    </div>

    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body%>
    </div>

    <div>
      <%= form.label :score %><br>
      <%= form.number_field :score, in: 1..5, step: 1%>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
