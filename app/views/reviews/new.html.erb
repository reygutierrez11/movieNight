<h1> New Review </h1>

<%= form_with model: @review do |form| %>
  <div>
    <%= form.label :title  %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %> <br>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
