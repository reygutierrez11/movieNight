<div class="mx-2 bg-gray-900 text-sky-200">
  <h1 class="py-4 mx-2 text-xl"> Review our most recent watch! </h1>

  <%= form_with(model: [@movie, @review]) do |form| %>

    <div class="flex mx-2 justify-left">
      <%= form.label :title, "Name of Review", class: "flex basis-1/4 font-semibold" %>
      <%= form.text_field  :title, class:"dark:text-black" %>
    </div>

    <div class="flex mx-2 justify-left">
      <%= form.label :author, class: "flex basis-1/4 font-semibold" %>
      <%= form.text_field :author, value:(current_user ? current_user.email : ""), class:"dark:text-black" %>
    </div>

    <div class="flex mx-2 justify-left">
      <%= form.label :movie, "Movie", class: "flex basis-1/4 font-semibold"%>
      <%= form.select :movie_id, Movie.all.pluck(:title, :id),{selected:@movie.id},{class: "form-control, dark:text-black"}%>
    </div>

    <div class="flex mx-2 justify-left">
      <%= form.label :score, class: "flex basis-1/4 font-semibold" %>
      <%= form.number_field :score, in: 1..5, step: 1, class:"dark:text-black"%>
    </div>

    <div class="flex mx-2 justify-left">
      <%= form.label :body, "Body (optional)", class: "flex basis-1/4 font-semibold"%>
      <%= form.text_area :body, class:"dark:text-black"%>
    </div>


    <div>
      <%= form.submit class:"m-1 px-1 lg:px-5 text-white bg-sky-400 border-0 focus:outline-none hover:bg-sky-600 rounded text-md" %>
    </div>
  <% end %>
</div>
