<div class ="w-full">
  <div class="sticky top-0">
    <%= render  "shared/nav_bar" %>
  </div>

  <div class="bg-teal-200 text-center">
    <div class="justify-center w-full py-10">
      <h1 class="text-lg text-center"> MOVIE NIGHT</h1>
      <h1 class="text-lg text-center"> Reviews</h1>
    </div>

    <div class= "">
      <ul class="grid grid-cols-3">
        <% @reviews.each do |review|%>
          <li class="px-8 py-4 grid grid-cols-3">
            <%= link_to review do %>
              <div class="bg-white rounded-lg border-2 border-indigo-600"><%= review.title%></div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="">
      <h1 class="underline">Previous month</h1>
      <br>
      <% @october.each do |review| %>
        <%= link_to review do %>
          <div class="bg-white rounded-lg border-2 border-indigo-600 grid grid-cols-3">
            <p>Movie: <%= review.title %></p>
            <p>Author: <%= review.author%></p>
            <p>Stars: <%= review.score %></p>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="">
      <h1 class="underline">This month</h1>
      <br>
      <% @november.each do |review| %>
        <%= link_to review do %>
          <div class="bg-white rounded-lg border-2 border-indigo-600 grid grid-cols-3">
            <p>Movie: <%= review.title %></p>
            <p>Author: <%= review.author%></p>
            <p>Stars: <%= review.score %></p>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="flex justify-center py-10">
      <h1>Latest Review |‚è≥|</h1>
    </div>

    <% if user_signed_in? %>
      <% if current_user.poster? | current_user.moderator? %>
        <div class="flex justify-center bg-teal-200">
          <button class="flex mx-auto mt-16 text-white bg-indigo-500 border-0 py-2 
                         px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg"><%= link_to "Add a review", new_review_path %></button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
