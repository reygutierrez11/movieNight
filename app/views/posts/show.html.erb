<h1> <%= @post.title %> </h1>

<p> <%= @post.body %></p>

<p> <%= link_to @post.link, @post.link%></p>

<% if current_user.moderator? %>
  <ul>
    <li> <%= link_to "Edit", edit_post_path(@post)  %></li>
    <li> <%= link_to "Destroy", post_path(@post), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?" }
    %> </li>
  </ul>
<% end %>
