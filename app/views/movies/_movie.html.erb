<div id="<%= dom_id movie %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= movie.title %>
  </p>

  <!--
    This will be added with a web scraping component

  <p class="my-5">
    <strong class="block font-medium mb-1">Summary:</strong>
    <%= movie.summary %>
  </p>
  -->

  <p class="my-5">
    <strong class="block font-medium mb-1">Rating:</strong>
    <%= movie.rating %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show movie page", movie, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit movie page', edit_movie_path(movie), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
