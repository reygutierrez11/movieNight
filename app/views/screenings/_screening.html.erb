<div id="<%= dom_id screening %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= screening.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= screening.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start time:</strong>
    <%= screening.start_time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End time:</strong>
    <%= screening.end_time %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this screening", screening, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this screening', edit_screening_path(screening), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
